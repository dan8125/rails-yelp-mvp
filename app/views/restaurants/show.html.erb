<div class="container my-4">
  <div class="card mb-4 shadow-sm">
    <div class="card-body">
      <h1 class="card-title"><%= @restaurant.name %></h1>
      <p class="card-text"><strong>Address:</strong> <%= @restaurant.address %></p>
      <p class="card-text"><strong>Category:</strong> <%= @restaurant.category.capitalize %></p>
      <p><%= link_to 'Back to restaurant list', restaurants_path, class: 'btn btn-secondary mt-2' %></p>
    </div>
  </div>

  <div class="mb-4">
    <h2>Reviews</h2>
    <% if @restaurant.reviews.any? %>
      <% @restaurant.reviews.each do |review| %>
        <div class="card mb-3">
          <div class="card-body">
            <p class="mb-1"><strong>Rating:</strong> <%= review.rating %> / 5</p>
            <p><%= review.content %></p>
          </div>
        </div>
      <% end %>
    <% else %>
      <p>No reviews yet.</p>
    <% end %>
  </div>

  <h3>Add a review</h3>
  <%= simple_form_for [@restaurant, @restaurant.reviews.build] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating, as: :integer, min: 0, max: 5 %>
    <%= f.submit "Submit review", class: "btn btn-primary" %>
  <% end %>

</div>
